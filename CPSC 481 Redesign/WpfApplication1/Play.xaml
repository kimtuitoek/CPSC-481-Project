<Window x:Class="WpfApplication1.Play"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Play" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Icon="Sign In 02.jpg" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Play.jpg" Opacity="1.0"/>
    </Window.Background>
    <Grid>
        <Button Content="QUIT" HorizontalAlignment="Left" Margin="684,10,0,0" VerticalAlignment="Top" Width="85" Height="43" BorderBrush="White" Foreground="White" Background="Black" BorderThickness="4" FontSize="20" Click="Exit"/>
        <Button Content="BACK" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="86" Height="43" BorderThickness="4" Background="Black" BorderBrush="White" Foreground="White" FontSize="20" Click="GoBackToHome"/>

    </Grid>
</Window>
