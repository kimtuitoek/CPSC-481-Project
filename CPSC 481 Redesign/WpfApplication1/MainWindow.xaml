<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SIGN IN" Height="480" Width="640" WindowStartupLocation="CenterScreen" MinWidth="640" MinHeight="480">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid>
        <Image Source="Sign In 02.jpg" Stretch="Fill"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="sign_in" HorizontalAlignment="Center" Width="91" Height="44" RenderTransformOrigin="0.5,0.5" Background="#FF060606" BorderBrush="#FFFBFBFB" Foreground="White" FontFamily="Impact" FontSize="20" BorderThickness="4" Content="SIGN IN" VerticalAlignment="Top"/>
            <Button x:Name="dummy_space_holder" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="178" Height="66" Visibility="Hidden"/>
            <Button x:Name="create_new_account" Content="CREATE NEW ACCOUNT" Width="203" Background="#FF040404" BorderBrush="#FFFBFBFB" Foreground="White" FontFamily="Impact" FontSize="20" BorderThickness="4" Height="55" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Margin="417,0,0,0" VerticalAlignment="Top">
            <Button Content="QUIT" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="67" Background="Black" BorderBrush="White" Foreground="White" BorderThickness="4" FontFamily="Impact" FontSize="20"/>
        </StackPanel>

    </Grid>
</Window>
